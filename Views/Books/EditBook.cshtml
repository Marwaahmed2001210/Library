@using Library_Management_System.Controllers
@using Library_Management_System.ViewModels
@using Library_Management_System.Models

@model Library_Management_System.ViewModels.EditBookViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Book</title>
    <style>

        h2{
            text-align: center;
            color: navy; /* Navy text color */
            margin: 15px;
            text-shadow: 2px 2px 4px lightgrey;
        }

        label{margin: 2%; color: navy; text-shadow: 2px 2px 4px lightgrey;}

     .btn {
            background: linear-gradient(135deg, navy, #d3d3d3, #f5f5dc); /* Gradient button */
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 2%;
        }
        .btn:hover {
            background: linear-gradient(135deg, #003366, #a9a9a9, #e5e5b3); /* Darker on hover */
            color: navy;
        }


        .form-group input, .form-group select {
            width: 100%;
            padding: 10px;
            background-color: beige; /* Beige background for input fields */
            border: 2px solid beige; /* Navy border */
            border-radius: 5px;
            color: navy;
        }
        .form-group input:focus, .form-group select:focus {
            border-color: navy; /* Navy border when focused */
            outline: none; /* Remove default outline */
        }

    </style>
</head>
<body>

<header>
    <nav style="display: flex; justify-content: space-between; align-items: center; padding: 10px;">
        <div style="font-size: 1.5rem; color: beige;">ðŸ“š Our Library </div>
        <button id="toggleBtn" class="open-btn">â˜° </button>
    </nav>
</header>

<div id="editBookCard" style="display: flex; justify-content: center; margin: 20px;">
    <div style="border: 1px solid navy; border-radius: 10px; padding: 20px; width: 100%; box-shadow: 0 4px 8px navy; background-color: #d3d3d3; display: flex; flex-direction: column;">
        <h2 style="text-align: center;">Edit Book</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="Title" />
            </div>
            <div class="form-group">
                <label>Author:</label>
                <input asp-for="Author" />
            </div>
            <div class="form-group">
                <label>Genre:</label>
                <input asp-for="Genre" />
            </div>
            <div class="form-group">
                <label>Available Copies:</label>
                <input asp-for="AvailableCopies" type="number" />
            </div>
            <div class="form-group">
                <label>Total Copies:</label>
                <input asp-for="TotalCopies" type="number" />
            </div>
            <button type="submit" class="btn">Save Changes</button>
        </form>
    </div>
</div>

</body>
</html>
